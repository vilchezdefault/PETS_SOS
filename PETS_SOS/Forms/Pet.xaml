        <Label x:Name="lblAllergies"  Content="Allergies" HorizontalAlignment="Left" Margin="390,34,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.526,0.361"/>
        <Label x:Name="lblOwner" Content="Owner" HorizontalAlignment="Left" Margin="390,99,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.526,0.361"/>
