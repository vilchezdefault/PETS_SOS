        <Image Source="/IMGS/logo juan.png" Margin="439,162,11,109" />
        <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Left" Margin="21,385,0,0" VerticalAlignment="Top" Click="Button_Click" Height="33" Width="227"/>
        <Button x:Name="btnMainWindow" Content="MainWindow" HorizontalAlignment="Left" Margin="279,385,0,0" VerticalAlignment="Top" Click="Button_Click" Height="33" Width="227"/>
        <Button x:Name="btnIndex" Content="Index" HorizontalAlignment="Left" Margin="550,385,0,0" VerticalAlignment="Top" Click="Button_Click" Height="33" Width="227"/>

    </Grid>
